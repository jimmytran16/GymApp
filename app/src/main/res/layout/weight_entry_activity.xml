<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/weightEntry"
        android:layout_width="214dp"
        android:layout_height="59dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/entryshape"
        android:ems="10"
        android:hint="Enter Weight"
        app:layout_constraintBottom_toTopOf="@+id/saveBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="419dp"
        android:layout_height="194dp"
        android:layout_marginBottom="108dp"
        android:background="@drawable/profile"
        android:src="@drawable/entry_header"
        app:layout_constraintBottom_toTopOf="@+id/entryDateField"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="419dp"
        android:layout_height="194dp"
        android:layout_marginTop="584dp"
        android:background="@drawable/profile"
        android:src="@drawable/entry_footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/entryDateField"
        android:layout_width="364dp"
        android:layout_height="27.5pt"
        android:layout_marginBottom="36dp"
        android:background="@drawable/entryshape"
        android:ems="10"
        android:hint="Click to choose date"
        app:layout_constraintBottom_toTopOf="@+id/weightEntry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="141dp"
        android:layout_height="59dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/entryshape"
        android:text="SAVE"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="145dp"
        android:layout_height="59dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/entryshape"
        android:text="CANCEL"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.382"
        app:layout_constraintStart_toEndOf="@+id/saveBtn" />

    <RadioGroup
        android:id="@+id/measureMent"
        android:layout_width="86dp"
        android:layout_height="63dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toTopOf="@+id/cancelBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/lbMeasure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="LBS" />

        <RadioButton
            android:id="@+id/kgMeausre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KG" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>
